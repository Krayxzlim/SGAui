<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sga.controllers.UsuariosController" spacing="10" padding="10">

    <TableView fx:id="tableUsuarios" prefHeight="300">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Label text="Nombre:"/>
        <TextField fx:id="tfNombre" prefWidth="150"/>
        <Label text="Email:"/>
        <TextField fx:id="tfEmail" prefWidth="200"/>
        <Label text="Password:"/>
        <TextField fx:id="tfPassword" prefWidth="150"/>
    </HBox>

    <HBox spacing="10">
        <Button fx:id="btnCrear" text="Crear"/>
        <Button fx:id="btnActualizar" text="Actualizar"/>
        <Button fx:id="btnEliminar" text="Eliminar"/>
        <Button fx:id="btnRefrescar" text="Refrescar"/>
    </HBox>

</VBox>
